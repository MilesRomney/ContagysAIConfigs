# Core Configuration
DATABASE_URI=
PAYLOAD_SECRET=
NEXT_PUBLIC_SERVER_URL="http://localhost:3000"
AUTH_BASE_URL="http://localhost:3000"

# Optional: Custom app title
NEXT_PUBLIC_TITLE=

# Authentication
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Logging Configuration (optional)
# LOG_LEVEL options: debug, info, warn, error
LOG_LEVEL=
# LOG_OUTPUT options: console, file, both
LOG_OUTPUT=

# Storage Configuration
# Options: 'supabase' or 's3'
STORAGE_PROVIDER=supabase

# Supabase Storage (when STORAGE_PROVIDER=supabase)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_BUCKET_NAME=

# S3-Compatible Storage (when STORAGE_PROVIDER=s3)
# Works with AWS S3, Cloudflare R2, MinIO, DigitalOcean Spaces, etc.
S3_ENDPOINT=  # e.g., https://s3.amazonaws.com or https://accountid.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=us-east-1  # or 'auto' for R2
# Optional: Custom public URL for S3 bucket
S3_PUBLIC_URL=

# AI Provider API Keys (add as needed)
OPENAI_API_KEY=
GEMINI_API_KEY=

# Optional: n8n Webhook Integration
N8N_URL=
N8N_AUTH_TOKEN=

# Optional: Brave Search API
BRAVE_API_KEY=

# Deprecated (remove if present in your .env)
APP_AUTH_SECRET=
SUPABASE_ANON_KEY=